<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>Create your pub crawl</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Pub Crawls</h3>
    <%= link_to "Create a pub_crawl", new_pub_crawl_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @pub_crawls.each do |pub_crawl| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to pub_crawl_path(pub_crawl), class:"text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=  %>)">
            <%= pub_crawl.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
