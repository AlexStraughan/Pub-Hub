<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
    <h1><%= @pub_crawl.name %></h1>
  </div>
    <span class="pub-tag"><%= pluralize(@pub_crawl.pubs.size, 'pub') %></span>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any pubs yet!" if @pub_crawl.pubs.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_pub_modal">
        add a pub
      </button>
      <%= link_to "delete this pub crawl", pub_crawl_path(@pub_crawl), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this epic pub crawl?" } %>
    </div>
  </div>
  <div class="row my-2">
    <% @pub_crawl.pubs.each do |pub| %>
      <% stop = Stop.find_by(pub_crawl: @pub_crawl, pub: pub) %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= pub.name %> <span class="text-muted font-weight-normal">â€¢ <%= pub.rating %> <i class="fas fa-star star-yellow"></i></span></strong>
            <small class="text-muted"><%= pub.name %></small>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
                <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%= stop.comment %></small>
              </div>
              <small class="text-right flex-shrink-0"><%= link_to "delete", stop_path(stop), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{pub.name} from your #{@pub_crawl.name} pub_crawl"}, class: 'text-danger' %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "stops/modal", pub_crawl: @pub_crawl, stop: @stop %>
