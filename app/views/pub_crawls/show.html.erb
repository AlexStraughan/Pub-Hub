<div class="position-relative">
  <div class="card-category card-large" >
    <%= video_tag "background-video-two.mp4", autoplay: true, muted: true, loop: true, class: "background-video-two" %>
  </div>
    <h1><%= @pub_crawl.name %></h1>
    <span class="pub-tag"><%= pluralize(@pub_crawl.pubs.size, 'pub') %></span>
</div>
<div class="container mb-5">
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any pubs yet!" if @pub_crawl.pubs.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-flat" data-bs-toggle="modal" data-bs-target="#new_pub_modal">
        add a pub
      </button>
      <%= link_to "delete this pub crawl", pub_crawl_path(@pub_crawl), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this epic pub crawl?" } %>
    </div>
  </div>
  <div class="row my-2">
    <% @pub_crawl.pubs.each do |pub| %>
      <% stop = Stop.find_by(pub_crawl: @pub_crawl, pub: pub) %>


        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
          <div class="card text-white card-has-bg click-col" style="background-image:url(<%= asset_path "tile_image_#{rand(5)}.jpg" %>);">
            <img class="card-img d-none" src="https://source.unsplash.com/600x900/?pub" alt="Goverment Lorem Ipsum Sit Amet Consectetur dipisi?">
            <div class="card-img-overlay d-flex flex-column">
              <div class="card-body">
                <small class="card-meta mb-2"><%= @pub_crawl.name %></small>
                <h4 class="card-title mt-0 "><a class="text-white" herf="#"><%= pub.name%></a></h4>
              </div>
              <div class="card-footer">
                <div class="media">
                  <div class="media-body">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
