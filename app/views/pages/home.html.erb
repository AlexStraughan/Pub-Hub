<div class="section">
  <%= video_tag "background-video.mp4", autoplay: true, muted: true, loop: true, class: "background-video" %>
  <div class="content">
    <div class="upper-banner">
      <h1>The pub-crawl specialists.</h1>
    </div>
    <div class="container">
    <h2>Enter your location to find live information about pubs nearby:</h2>
      <form action="/pubs" class="searchbar" data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>">

      <input type="text" placeholder="Where are you now?" name="address" id="address" data-address-autocomplete-target="address" style="display:none;">
        <button type="submit"><img src="assets/search.png"></button>
      </form>
    </div>

    <div class="empty">
    </div>
  </div>
</div>
