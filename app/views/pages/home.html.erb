<div class="section">
  <%= video_tag "background-video.mp4", autoplay: true, muted: true, loop: true, class: "background-video" %>
  <div class="content">
    <div class="upper-banner">
      <h1>The pub-crawl specialists.</h1>
      <h2>Enter your location to find live information about pubs nearby</h2>
    </div>
    <div class="container">
      <form action="" class="searchbar">
        <input type="text" placeholder="Where are you now?" name="q">
        <a href="/pubs"><button type="submit"><img src="assets/search.png"></button></a>
      </form>
    </div>
    <div class="footer">
    </div>
  </div>
</div>
